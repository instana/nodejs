ARG DOCKER_TAG=latest
ARG INSTANA_LAYER=icr.io/instana/aws-fargate-nodejs
ARG NODEJS_VERSION=12.16.3

FROM ${INSTANA_LAYER}:${DOCKER_TAG} as instanaLayer

FROM node:${NODEJS_VERSION}
WORKDIR /usr/src/app

COPY package*.json ./
RUN npm install --only=production

COPY . .

COPY --from=instanaLayer /instana /instana
RUN /instana/setup.sh
ENV NODE_OPTIONS="--require /instana/node_modules/@instana/aws-fargate"

EXPOSE 4816

ENTRYPOINT [ "npm", "start" ]

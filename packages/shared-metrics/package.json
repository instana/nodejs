{
  "name": "@instana/shared-metrics",
  "version": "1.140.0",
  "description": "Internal metrics plug-in package for Node.js monitoring with Instana",
  "author": {
    "name": "Bastian Krol",
    "email": "bastian.krol@instana.com"
  },
  "homepage": "https://github.com/instana/nodejs/blob/main/packages/shared-metrics/README.md",
  "main": "src/index.js",
  "files": [
    "src",
    "addons/linux",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/instana/nodejs.git"
  },
  "scripts": {
    "audit": "bin/prepare-audit.sh && npm audit --production; AUDIT_RESULT=$?; git checkout package-lock.json; exit $AUDIT_RESULT",
    "test": "mocha --sort test/globalHooks_test.js $(find test -iname '*test.js' -not -path '*node_modules*')",
    "test:ci": "echo \"******* Files to be tested:\n $CI_SHARED_METRICS_TEST_FILES\" && if [ -z \"${CI_SHARED_METRICS_TEST_FILES}\" ]; then echo \"No Files to test in this node\"; else mocha --reporter mocha-multi-reporters --reporter-options configFile=reporter-config.json --sort test/globalHooks_test.js ${CI_SHARED_METRICS_TEST_FILES}; fi",
    "test:debug": "WITH_STDOUT=true npm run test",
    "lint": "eslint src test",
    "verify": "npm run lint && npm test",
    "prettier": "prettier --write 'src/**/*.js' 'test/**/*.js'"
  },
  "keywords": [
    "instana",
    "memory",
    "metrics",
    "monitoring",
    "performance",
    "sensor"
  ],
  "contributors": [
    {
      "name": "Bastian Krol",
      "email": "bastian.krol@instana.com"
    },
    {
      "name": "Emelia Smith",
      "email": "ThisIsMissEm@users.noreply.github.com"
    },
    {
      "name": "Richard Gebhardt",
      "email": "gebhardt@us.ibm.com"
    },
    {
      "name": "Willian Carvalho",
      "email": "willian.carvalho@instana.com"
    },
    {
      "name": "Katharina Irrgang",
      "email": "katharina.irrgang@instana.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/instana/nodejs/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@instana/core": "1.140.0",
    "detect-libc": "^1.0.3",
    "event-loop-lag": "^1.4.0",
    "recursive-copy": "^2.0.13",
    "semver": "7.3.3",
    "tar": "^6.1.11"
  },
  "devDependencies": {
    "@types/tar": "^4.0.5",
    "no-code2": "2.0.0"
  },
  "optionalDependencies": {
    "event-loop-stats": "1.4.1",
    "gcstats.js": "1.0.0"
  }
}

{
  "name": "instana-nodejs-sensor",
  "version": "1.137.0",
  "description": "The Instana Node.js sensor (legacy adapter for previous package name)",
  "author": {
    "name": "Bastian Krol",
    "email": "bastian.krol@instana.com"
  },
  "homepage": "https://github.com/instana/nodejs/blob/main/packages/legacy-sensor/README.md",
  "license": "MIT",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/instana/nodejs.git"
  },
  "scripts": {
    "audit": "bin/prepare-audit.sh && npm audit --production; AUDIT_RESULT=$?; git checkout package-lock.json; exit $AUDIT_RESULT",
    "test": "npm run test:mocha",
    "test:mocha": "echo \"******* Files to be tested:\n $CI_LEGACY_SENSOR_TEST_FILES\" && mocha --sort --reporter mocha-multi --reporter-options spec=-,xunit=../../test-results/legacy-sensor/results.xml ${CI_LEGACY_SENSOR_TEST_FILES:=$(find test -iname '*test.js' -not -path '*node_modules*')}",
    "test:debug": "WITH_STDOUT=true npm run test:mocha",
    "lint": "eslint src test",
    "verify": "npm run lint && npm test",
    "prettier": "prettier --write 'src/**/*.js' 'test/**/*.js'"
  },
  "keywords": [
    "instana",
    "agent",
    "sensor",
    "monitoring",
    "tracing"
  ],
  "contributors": [
    {
      "name": "Bastian Krol",
      "email": "bastian.krol@instana.com"
    },
    {
      "name": "Willian Carvalho",
      "email": "willian.carvalho@instana.com"
    },
    {
      "name": "Katharina Irrgang",
      "email": "katharina.irrgang@instana.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/instana/nodejs/issues"
  },
  "dependencies": {
    "@instana/collector": "1.137.0"
  },
  "devDependencies": {
    "@instana/core": "1.137.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-mocha": "^8.1.0",
    "mocha": "^7.2.0",
    "prettier": "^2.3.2"
  }
}

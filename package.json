    "pg": "^7.7.1",
    "prettier": "^1.17.1",
    "proxyquire": "2.1.0",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "request-promise-native": "^1.0.5",
    "rimraf": "^3.0.0",
    "sequelize": "^4.43.0",

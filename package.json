{
  "name": "@instana/root",
  "private": true,
  "description": "A monorepo for various Instana Node.js tracing and metrics collector packages",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/instana/nodejs-sensor.git"
  },
  "scripts": {
    "audit": "lerna run audit --stream && npm audit --production",
    "bootstrap": "lerna bootstrap",
    "bump": "lerna publish",
    "postinstall": "npm run bootstrap",
    "precommit": "doctoc packages/collector/README.md",
    "prettier": "lerna run prettier --stream",
    "test": "lerna run test --stream",
    "test:debug": "lerna run test:debug --stream",
    "lint": "lerna run lint --stream",
    "verify": "lerna run verify --stream",
    "version": "lerna clean --yes && lerna bootstrap --ignore-scripts -- --package-lock-only --no-audit && git add packages/*/package-lock.json"
  },
  "devDependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "@hapi/hapi": "^18.3.1",
    "admin": "^1.4.1",
    "admin-plugin-healthcheck": "^1.1.0",
    "amqplib": "^0.5.2",
    "apollo-link": "^1.2.11",
    "apollo-link-ws": "^1.0.17",
    "apollo-server-express": "^2.6.1",
    "async": "^2.6.1",
    "aws-sdk": "2.553.0",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "chai": "4.2.0",
    "dev-null": "0.1.1",
    "doctoc": "^1.3.1",
    "elasticsearch": "11.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-mocha": "^5.3.0",
    "express": "^4.16.4",
    "express-pino-logger": "^4.0.0",
    "fastify": "1.12.1",
    "google-protobuf": "^3.0.0",
    "graphql": "^14.3.1",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^4.0.4",
    "grpc": "^1.24.2",
    "ioredis": "^3.2.2",
    "kafka-node": "^4.1.3",
    "kafkajs": "^1.11.0",
    "koa": "^2.3.0",

  "bugs": {
    "url": "https://github.com/instana/nodejs-sensor/issues"
  },
  "license": "MIT",
  "scripts": {
    "audit": "lerna run audit --stream && npm audit --production",
    "bootstrap": "lerna bootstrap",
    "bump": "lerna publish",
    "postinstall": "npm run bootstrap",
    "precommit": "doctoc packages/collector/README.md",
    "prettier": "lerna run prettier --stream",
    "reinstall-deps": "lerna clean -y && rm -rf node_modules && npm install && lerna bootstrap",
    "update-deps": "lerna exec '../../node_modules/.bin/ncu --upgrade' && lerna exec 'npm i --package-lock-only' && npm run reinstall-deps",
    "test": "lerna run test --stream",
    "test:debug": "lerna run test:debug --stream",
    "lint": "tsc && lerna run lint --stream && (node misc/is_eol || eslint misc)",
    "verify": "lerna run verify --stream",
    "version": "lerna clean --yes && lerna bootstrap --ignore-scripts -- --package-lock-only --no-audit && git add packages/*/package-lock.json"
  },

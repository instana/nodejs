function buildAndCopyModulesLinux {
  ABI_VERSIONS=$1
  NODEJS_VERSION=$2
  echo ""
  echo Building linux 390x addons for ABI version $ABI_VERSION with Node.js $NODEJS_VERSION:
  nvm install --skip-default-packages $NODEJS_VERSION
  nvm use $NODEJS_VERSION
  rm -rf tmp
  mkdir tmp
  pushd tmp > /dev/null
  npm init --yes
  npm install @instana/collector@latest
  pushd node_modules > /dev/null
  echo "Creating native addon tar.gz files"
  mkdir -p ../../../packages/shared-metrics/addons/linux/s390x/glibc/$ABI_VERSION/
  mkdir -p ../../../packages/collector/addons/linux/s390x/glibc/$ABI_VERSION/
  if [[ -e event-loop-stats ]]; then
    tar -czf ../../../packages/shared-metrics/addons/linux/s390x/glibc/$ABI_VERSION/event-loop-stats.tar.gz event-loop-stats
  else
    echo No event-loop-stats package for ABI version $ABI_VERSION on MacOS.
  fi
  if [[ -e gcstats.js ]]; then
    tar -czf ../../../packages/shared-metrics/addons/linux/s390x/glibc/$ABI_VERSION/gcstats.js.tar.gz gcstats.js
  else
    echo No gcstats.js package for ABI version $ABI_VERSION on linux s390x.
  fi
  popd > /dev/null
  popd > /dev/null
  rm -rf tmp
}
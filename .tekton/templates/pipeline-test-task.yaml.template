    - name: {{name}}-task
      runAfter:
        - install-npm-dependencies
      taskRef:
        name: {{name}}
      params:
        - name: node-version
          value: $(params.node-version)
        - name: repository
          value: $(params.repository)
        - name: revision
          value: $(params.commit-id)
        - name: continuous-delivery-context-secret
          value: "secure-properties"
        - name: esm
          value: $(params.esm)
      workspaces:
        - name: output
          workspace: artifacts
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "allowJs": true,
    "checkJs": true,
    "lib": ["esnext.asynciterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true
  },
  "include": [
    "./packages/core/**/*.js",
    "./packages/collector/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/node_modules/*",
  ]
}

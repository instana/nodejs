{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "allowJs": true,
    "checkJs": true,
    "lib": ["esnext.asynciterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "packages/collector/types",
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "maxNodeModuleJsDepth": 0
  },
  "include": [
    "packages/core/src/util",
    "packages/core/src/tracing/*.js",
    "packages/core/test/test_util/common_verifications.js",
    "packages/shared-metrics",
    "packages/collector/src"
  ],
  "exclude": [
    "node_modules",
    "packages/shared-metrics/test/dependencies",
    "packages/shared-metrics/test/globalHooks_test.js"
  ]
}
